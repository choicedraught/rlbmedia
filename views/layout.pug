doctype html
html
 head
  title #{title}
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
  link(rel='stylesheet' href='/css/style.css')
 body
   nav.navbar.navbar-inverse
     .container
       a.navbar-brand(href='/') RLB Media Collection
       button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-controls='navbar', aria-expanded='false', aria-label='Toggle navigation')
         span.sr-only Toggle navigation
         span.icon-bar
         span.icon-bar
         span.icon-bar
       #navbar.collapse.navbar-collapse
         ul.nav.navbar-nav
           li
             a(href='/')
               | Search 
               span.sr-only (current)
           li
             a(href='/all')
               | All Media 
               span.sr-only (current)
           li
             a(href='/media/add') New Media Item
         ul.nav.navbar-nav.navbar-right
           if user
             li
               a(href='/logout') Logout
           else
             li
               a(href='/users/register') Register
             li
               a(href='/users/login') Login
   .container
     != messages('message', locals)
     if errors
       each error, i in errors
         div(class="alert alert-danger") #{ error.msg }
     block content
     br
     hr
     footer
       p Copyright &copy; 2018
   script(src='/bower_components/jquery/dist/jquery.js')
   script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
   script(src='/js/main.js')
